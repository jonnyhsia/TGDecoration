<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:padding="20dp"
    tools:background="@android:color/white"
    tools:context=".page.home.muse.adapter.AlbumViewBinder">

    <include
        layout="@layout/include_timeline_author"
        tools:ignore="MissingConstraints" />

    <com.tugou.decoration.widget.foundation.TGImageView
        android:id="@+id/museContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:elevation="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgAvatar"
        app:tg_aspectRatio="1.78"
        tools:src="@drawable/placeholder_rounded_gray" />

    <include
        layout="@layout/include_timeline_behavior"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>