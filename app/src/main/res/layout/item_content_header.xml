<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="12dp"
    android:paddingBottom="12dp">

    <com.tugou.decoration.widget.foundation.TGTextView
        android:id="@+id/tvHeaderTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textAppearance="@style/TGTextAppearance.SectionTitle"
        app:tg_font="bold"
        tools:text="热门灵感文章 &amp; 美图" />

    <com.tugou.decoration.widget.recyclerview.BounceRecyclerView
        android:id="@+id/recycleRecommendTags"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_marginTop="36dp"
        android:clipToPadding="false"
        android:nestedScrollingEnabled="false"
        android:paddingStart="20dp"
        android:paddingEnd="20dp" />

</FrameLayout>