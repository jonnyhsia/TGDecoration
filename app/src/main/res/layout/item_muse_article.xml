<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:padding="20dp"
    tools:background="@android:color/white"
    tools:context=".page.home.muse.adapter.ArticleViewBinder">

    <include
        layout="@layout/include_timeline_author"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/museContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:elevation="12dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgAvatar">

        <com.tugou.decoration.widget.foundation.TGImageView
            android:id="@+id/imgCover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="8dp"
            android:scaleType="centerCrop"
            app:tg_aspectRatio="2"
            tools:src="@drawable/placeholder_gray" />

        <com.tugou.decoration.widget.foundation.TGTextView
            android:id="@+id/tvArticleTitle"
            style="@style/TGTextAppearance.ArticleTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            tools:text="家装参观·都市生活中，宁静而紧凑的家。" />

    </LinearLayout>

    <include
        layout="@layout/include_timeline_behavior"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>